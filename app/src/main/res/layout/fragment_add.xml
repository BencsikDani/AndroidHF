<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="@color/myBlue2" >


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:text="@string/lblItemName" />

        <EditText
            android:id="@+id/etItemName"
            android:width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:text="@string/lblItemBrand" />

        <EditText
            android:id="@+id/etItemBrand"
            android:width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:text="@string/lblQuantity" />

        <EditText
            android:id="@+id/etItemQuantity"
            android:width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:layout_gravity="center|right"
            android:textColor="@color/white"
            android:text="@string/lblItemCategory" />

        <Spinner
            android:id="@+id/spnrItemCategory"
            android:width="200dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:backgroundTint="@color/white"/>

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:text="@string/lblNote" />

        <EditText
            android:id="@+id/etItemNote"
            android:width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:gravity="center"
            android:text="@string/btnOk"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnCancelAddItem"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="@string/btnCancel"
            android:layout_margin="8dp"/>

    </TableRow>

</TableLayout>
